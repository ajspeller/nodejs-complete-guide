<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/orders.css">
</head>
<body>
  
  <%- include('../includes/navigation.ejs') %>
  <main>

    <% if (orders.length < 1) { %>
      <h1>No Orders</h1>
    <% } else { %>
      <ul class="orders">
        <% orders.forEach(o => { %>
          <li class="orders__item">
            <h1># <%= o._id %> </h1>
            <ul class="orders__products">
              <% o.items.forEach(p => { %>
                <li class="orders__products-item"><%= p.title %> (<%= p.quantity %>) </li>
              <% }) %>
            </ul>
          </li>
        <% }) %>
      </ul>
    <% } %>

  </main>
  <%- include('../includes/end.ejs') %>